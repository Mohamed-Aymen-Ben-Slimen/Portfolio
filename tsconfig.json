{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "jsxFactory": "ElementFactory.createElement",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015"
        ]
    },
    "compileOnSave": false,
    "include": [
        "./src/ts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}